// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Dopowerup {
  txid       String  @id
  receiver   String
  payer      String
  cpu_frac   Int
  net_frac   Int
  time       Int
  failed     Boolean
  reversible Boolean

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
  @@index([time])
  @@index([receiver])
  @@index([payer])
}

model User {
  id             String      @id @default(cuid())
  telegramId     Int?        @unique
  telegramHandle String?     @unique
  eosAccount     String?     @unique
  discordId      String?     @unique
  discordHandle  String?
  freePowerups   Dopowerup[]
  email          String?     @unique
}

model Cursor {
  searchString String @id
  cursor       String
  lowBlock     Int

  @@index([lowBlock])
  @@index([searchString])
}

model ipblacklist {
  ip     String @id
  reason String

  @@index([reason])
}

model blacklist {
  account String @id
  reason  String

  @@index([reason])
}

model Logpowerup {
  seq             Int    @id
  txid            String
  action          String
  cost            Float
  fee             Float
  received_cpu_ms Float
  received_net_kb Float
  receiver        String
  payer           String
  total_billed    Float
  blockTime       Int

  @@index([receiver])
  @@index([payer])
  @@index([action])
  @@index([fee])
  @@index([cost])
  @@index([blockTime])
}

model Logbuyram {
  seq             Int    @id
  txid            String
  action          String
  cost            Float
  fee             Float
  received_ram_kb Float
  receiver        String
  payer           String
  total_billed    Float
  blockTime       Int

  @@index([receiver])
  @@index([payer])
  @@index([action])
  @@index([fee])
  @@index([cost])
  @@index([blockTime])
}

model Transfer {
  seq       Int    @id
  from      String
  to        String
  quantity  Float
  memo      String
  symbol    String
  txid      String
  blockTime Int

  @@index([blockTime])
  @@index([seq])
  @@index([from])
  @@index([to])
  @@index([symbol])
}

model Stats {
  id                   String @id @default(cuid())
  owners               Int
  totalWatched         Int
  totalDeposited       Float
  internalEOSBal       Float  @default(0)
  eosBal               Float  @default(0)
  autopowerups24hr     Int    @default(0)
  autopowerupCost24hr  Float  @default(0)
  autobuyram24hr       Int    @default(0)
  autopowerupfees24hr  Float  @default(0)
  autobuyramfees24hr   Float  @default(0)
  autobuyramCost24hr   Float  @default(0)
  registeredUsersTotal Int    @default(0)
  activeTgUsers        Int    @default(0)
  activeDiscordUsers   Int    @default(0)
  freePowerups24hr     Int    @default(0)
  freePowerupsCost24hr Float  @default(0)
  createdAt            Int

  @@index([createdAt])
}

model rpcErrors {
  id       String @id @default(cuid())
  time     Int
  endpoint String
  error    String

  @@index([endpoint])
  @@index([error])
}
